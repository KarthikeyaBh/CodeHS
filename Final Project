#Game 1 - Horse Race(20)
def Horse_Race_Rules():
    print("""Rules:
    - You roll a die with 100 sides
    - If the number is greater than 50, your horse moves forward by 1
    - If the number is less than 50, nothing happens and it is the next players turn
    - The player who reaches the end of the track wins!
    - Up to 4 players can play the game
    
    - SPECIAl: If you roll a 69 you win 😁
    
Enter [A] to begin...
Enter [B] to go back...""")

    while True:
        response = input("Response: ")
        if response == "A":
            print("")
            print("Horse Race Loading...")
            for i in range(15550000):
                useless = 0
            os.system("clear")
            ShowHorse()
            False
            break
        elif response == "B":
            print("")
            print("Exiting Application...")
            for i in range(15550000):
                useless = 0
            os.system('clear')
            home_screen()
            False
            break
        else:
            print("")
            print("Error: Enter Valid Response!")
            print("")
            for i in range(15550000):
                useless = 0
            os.system("clear")
            Horse_Race_Rules
            ()

def ShowHorse():
    while True:
        num_players = int(input("# of Players(1-4): "))
        if num_players == 1:
            tail = 2
            os.system("clear")
            False
            break
        elif num_players == 2:
            tail = 2
            os.system("clear")
            False
            break
        elif num_players == 3:
            tail = 3
            os.system("clear")
            False
            break
        elif num_players == 4:
            tail = 4
            os.system("clear")
            False
            break
        else:
            print("")
            print("Error: Enter Valid Response!")
            print("")
            for i in range(15550000):
                useless = 0
            os.system("clear")
    
    def print_board(board):
        for i in range(len(board)):
            print(" ".join([str(x) for x in board[i]]))
    
    print("HORSE RACE 🐴")
    print("______________________________")
    
    track_grid = []
    
    for i in range(tail):
        track_grid.append([0] * 11)
        
    for row in range(tail):
        for col in range(11):
            track_grid[row][col]= "-"
            
    print_board(track_grid)
    print("______________________________")
    
    while True:
        for i in range(tail):
            horse_num = random.randint(1,101)
            pos = 0
            if horse_num > 50:
                track_grid[i][pos] == "H"
            print("Player " + str(i) + "'s turn: " + horse_num)
        False
        break

lock_screen()
